# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                  Application.index
GET     /registration                                      Registration.index
GET     /invitation                                        Invitation.index
GET		/communitycontroller/createNewCommunity			   CommunityController.createNewCommunity
POST	/communitycontroller/updatecommunity			   CommunityController.updateCommunity

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

# Import Secure routes
*	/	module:secure
